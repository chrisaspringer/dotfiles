#!/bin/sh

#===================================================================================
#
# Script that facilitates a software package release via the Git HubFlow system
#
# Two Required Parameters
# 1) Semantic Version Number
# 2) Semantic Version Update - i.e. Major, Minor, Patch
#
#===================================================================================

if [ $# != 2 ]; then
    echo "Usage: rl [version] [major/minor/patch]";
else
    if [ `git branch --list 'release*'` ]
    then
        echo "A release branch already exists. Please delete that branch before proceeding.";
    else
        git hf release start $1
        npm version $2
        git hf release finish $1
    fi
fi