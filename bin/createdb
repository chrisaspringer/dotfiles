#!/bin/sh

#===================================================================================
#
# Script that creates a MySQL database with the provided name.
#
# One Required Parameters
# 1) Database name
#
#===================================================================================

if [ $# != 1 ]; then
    echo "Usage: createdb [dbname]";
else
    mysql -u root -e 'CREATE DATABASE $1 CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci'
fi