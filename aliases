
#------------------------------------------------------------------------------------------
# General / Utility
#------------------------------------------------------------------------------------------
alias c='clear'
alias clear_ds_store='rm -rf `find . -name '.DS_Store'`'
alias flush_dns='sudo killall -HUP mDNSResponder'
alias fn='find . -name'
alias h='history'
alias hg='history | grep'
alias hosts='sudo vi /etc/hosts'
alias mc='mc -a -c'
alias size='du -hs ./'
alias sshkey='pbcopy < ~/.ssh/id_rsa.pub'

# Permissions
alias f755='find . -type d -exec chmod 755 {} \;'
alias f644='find . -type f -exec chmod 644 {} \;'

# Directory Switching
alias dev='cd ~/Workspace'
alias dot='cd ~/Workspace/dotfiles'

# Aliases
alias ca='cat ~/.aliases'
alias sa='source ~/.aliases'
alias va='vi ~/.aliases-local'

# Zsh Config
alias vz='vi ~/.zshrc'
alias sz='source ~/.zshrc'


#------------------------------------------------------------------------------------------
# Vagrant
#------------------------------------------------------------------------------------------
alias vgs='vagrant global-status'
alias vu='vagrant up'
alias vh='vagrant halt'


#------------------------------------------------------------------------------------------
# Homestead
#------------------------------------------------------------------------------------------
alias hs='cd /Users/${USER}/Workspace/Homestead'
alias he='subl /Users/${USER}/Workspace/Homestead/Homestead.yaml'
alias hu="cd '/Users/${USER}/Workspace/Homestead'; vagrant up; cd -"
alias hh="cd '/Users/${USER}/Workspace/Homestead'; vagrant halt; cd -"
alias hp="cd '/Users/${USER}/Workspace/Homestead'; vagrant provision; cd -"


#------------------------------------------------------------------------------------------
# MySQL
#------------------------------------------------------------------------------------------
alias mysql_start='sudo /usr/local/mysql/support-files/mysql.server start'
alias mysql_stop='sudo /usr/local/mysql/support-files/mysql.server stop'
alias mysql_restart='sudo /usr/local/mysql/support-files/mysql.server restart'


#------------------------------------------------------------------------------------------
# Laravel
#------------------------------------------------------------------------------------------
alias art='php artisan'
alias cda='composer dump-autoload'
alias cll='cat storage/logs/laravel.log'
alias devseed='php artisan db:seed:dev'
alias fresh='php artisan migrate:fresh --seed'
alias nrd='npm run dev'
alias routes='php artisan route:list'
alias refresh='php artisan migrate:refresh --seed'
alias seed='php artisan migrate:fresh --seed && php artisan db:seed:test'
alias tll='tail -f storage/logs/laravel.log'
alias watch='npm run watch'


#------------------------------------------------------------------------------------------
# Git
#------------------------------------------------------------------------------------------
alias glog="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
alias nah='git reset HEAD --hard'

